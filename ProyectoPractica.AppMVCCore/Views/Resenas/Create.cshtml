@model ProyectoPractica.AppMVCCore.Models.Resena

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resena</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LibroId" class="control-label"></label>
                <select asp-for="LibroId" class ="form-control" asp-items="ViewBag.LibroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div>
                <label for="calificacion">Calificación:</label>
                <select class="form-control" id="calificacion" name="calificacion">
                    <option value="">Seleccionar calificación</option>
                    <option value="5">Excelente</option>
                    <option value="4">Bueno</option>
                    <option value="3">Regular</option>
                    <option value="2">Malo</option>
                    <option value="1">Muy malo</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="row mt-3">
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

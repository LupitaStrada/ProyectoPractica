@model IEnumerable<ProyectoPractica.AppMVCCore.Models.Resena>

@{
    ViewData["Title"] = "Index";
	var modelBuscar = new Resena();
}

<h1>Index</h1>

<form asp-action="Index">
    <div class="row">
        <div class="form-group col-4">
            <label asp-for="@modelBuscar.Libro"></label>
            <input name="nombre" class="form-control" />
        </div>
        
        @*  <div class="form-group col-4">
            <label asp-for="@modelBuscar.Marca" class="control-label text-light"></label>
            <input name="marca" class="form-control" />
        </div> *@
    </div>
    <div class="row">
        <div class="form-group col-3">
            <label>Cant. Registros</label>
            <select name="topRegistro" class="form-control">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
                <option value="0">Todos</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="row mt-3">
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a asp-action="Create" class="btn btn-outline-danger"><i class="bi bi-plus-circle" title="Ir a crear"></i></a>
            </div>
        </div>
    </div>
</form>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Libro.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.NombreUsuario)
            </td>
                <td class="text-light">
                    <div class="d-flex flex-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success me-1" title="Editar"><i class="bi bi-pencil"></i> </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary me-1" title="Detalles"><i class="bi bi-eye"></i> </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar"><i class="bi bi-trash-fill"></i> </a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                searching: false,
                ordering: false,
                 "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });
        });
    </script>
}
@model ProyectoPractica.AppMVCCore.Models.Usuario

@{
    ViewData["Title"] = "ChancePassword";
}

<h1>Cambiar contraseña</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChancePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label ">contraseña actual</label>
                <input name="PasswordAnt" type="password" required class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Nueva contraseña </label>
                <input name="PasswordAnt" type="password" required class="form-control" />
            </div>       
            <div class="row mt-3">
                <div class="form-group">
                    <input type="submit" value="Cambiar contraseña" class="btn btn-primary text-light " />
                    <a asp-action="Index" class="btn btn-info">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
